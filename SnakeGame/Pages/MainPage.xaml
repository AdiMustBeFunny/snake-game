<Page x:Class="SnakeGame.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SnakeGame.Pages"
      xmlns:vm="clr-namespace:SnakeGame.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.DataContext>
        <vm:MainPageViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="New Game" Command="{Binding NavigateToGameCommand}" FontSize="50"  Grid.Row="0"/>
        <Button Content="Select Level" FontSize="50" Command="{Binding NavigateToSelectLevelCommand}" Grid.Row="1"/>
        <Button Content="Level Editor" FontSize="50" Command="{Binding NavigateToLevelDesignerCommand}" Grid.Row="2"/>
    </Grid>
</Page>
